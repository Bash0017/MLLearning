<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainerActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ML Learning"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Recognization"
        android:id="@+id/textRecognize"
        android:background="@color/bgColor"
        android:textColor="@color/whiteColor"
        android:textSize="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Face Detection"
        android:id="@+id/faceDetection"
        android:background="@color/bgColor"
        android:textColor="@color/whiteColor"
        android:textSize="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detect Stone's Purity"
        android:id="@+id/detectObjectByModel"
        android:background="@color/bgColor"
        android:textColor="@color/whiteColor"
        android:textSize="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        />

</LinearLayout>